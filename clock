#include <iostream>



using namespace std;

 intmain()
 { double second ,hour,minutes ;


 

   cin>>second;

   hour=second/3600;

   minutes=(hour-(int)hour)*60;

   second=(((hour-(int)hour)*60)-(int)minutes)*60;

   cout<<(int)hour<<":"<<(int)minutes<<":"<<second<<endl;


   return 0;
 }
